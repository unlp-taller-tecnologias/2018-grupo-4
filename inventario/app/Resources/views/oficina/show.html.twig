{% extends 'base.html.twig' %}

{% block body %}
    <h1>Oficina</h1>
    <form>
      <div class="form-group row">
        <label for="staticNombre" class="col-sm-1 col-form-label">Nombre</label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control" id="staticNombre" value="{{ oficina.nombre }}">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticNombre" class="col-sm-1 col-form-label">Responsable</label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control" id="staticResponsable" value="{{ oficina.responsable }}">
        </div>
      </div>
    </form>
    <ul>
        <li>
            <a href="{{ path('oficina_edit', { 'id': oficina.id }) }}">Editar Oficina</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar Oficina">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('oficina_index') }}">Listado de Oficinas</a>
        </li>
    </ul>
{% endblock %}
