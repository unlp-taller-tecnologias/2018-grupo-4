{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipos de Artículos</h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Habilitado</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipoArticulo in tipoArticulos %}
            <tr scope="row">
                <td><a href="{{ path('tipoarticulo_show', { 'id': tipoArticulo.id }) }}">{{ tipoArticulo.codigo }}</a></td>
                <td>{% if tipoArticulo.habilitado %}Si{% else %}No{% endif %}</td>
                <td>{{ tipoArticulo.descripcion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tipoarticulo_show', { 'id': tipoArticulo.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('tipoarticulo_edit', { 'id': tipoArticulo.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipoarticulo_new') }}">Crear nuevo Tipo</a>
        </li>
    </ul>
{% endblock %}
