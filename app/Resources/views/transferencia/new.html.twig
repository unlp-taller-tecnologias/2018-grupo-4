                      {% if (o.nombre) == transferencia.oficinaDestino.nombre %}
                         {% set selected = 'selected' %}
                      {% endif %}
                      <option value="{{o.nombre}}" {{ selected }}>{{o.nombre}}</option>
                  {% else %}
                      <option value="{{o.nombre}}" >{{o.nombre}}</option>
                  {% endif %}
              {% endfor %}
