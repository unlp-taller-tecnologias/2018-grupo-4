{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
<br>
<a href="{{ path('tipo_index') }}"><i class="fas fa-angle-left"></i> Listado de Tipos de Artículos</a>
<br>
<hr>
    <h2>Editar Tipo de Artículo: {{ tipo.nomenclador }}</h2>
<hr>
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <button type="submit" value="Submit" class="btn btn-dark"><i class="fas fa-save"></i> Guardar</button>
    {{ form_end(edit_form) }}
{% endblock %}

{% block serchArticulos  %}
<script>
var hab = 'true';
$( document ).ready(function() {
   $("#appbundle_tipo_grupo").prop('disabled', true);
   $("#appbundle_tipo_subgrupo").prop('disabled', true);
   $("#appbundle_tipo_descripcion").prop('disabled', true);
});

$(document.body).on('change','#appbundle_tipo_nomenclador',function(){
  if (hab == 'true'){
    $("#appbundle_tipo_grupo").removeAttr('disabled');
    $("#appbundle_tipo_subgrupo").removeAttr('disabled');
    $("#appbundle_tipo_descripcion").removeAttr('disabled');
    $("#appbundle_tipo_vidaUtil").prop('disabled', true);
    hab = 'false';
  } else {
    $("#appbundle_tipo_grupo").prop('disabled', true);
    $("#appbundle_tipo_subgrupo").prop('disabled', true);
    $("#appbundle_tipo_descripcion").prop('disabled', true);
    $("#appbundle_tipo_vidaUtil").removeAttr('disabled', true);
      hab = 'true';
  }
});
</script>
{% endblock %}
