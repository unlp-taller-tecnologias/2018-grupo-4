{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
      <br>
      <hr>
      <h2>Listado de usuarios</h2>
      <hr>
      <div class="">
        <a class="btn btn-dark" href="{{ path('user_new') }}">(+) Agregar nuevo usuario</a>
      </div>
      <br>
      <div class="table-responsive">
        <table  id="tablaUser"
                class="table table-hover table-striped"
                data-toggle="table"
                data-height="400"
                data-side-pagination="server"
                data-pagination="true"
                data-page-list="[2, 5, 10, 20, 50, 100, 200]"
                data-url="listadoUsers"
                >
          <thead>
            <tr>
              <th scope="row" data-field="username" data-sortable="true">Nombre de usuario</th>
              <th scope="row" data-field="name" data-sortable="true">Nombre</th>
              <th scope="row" data-field="lastname" data-sortable="true">Apellido</th>
              <!-- <th scope="row" data-field="email" data-sortable="true">E-mail</th> -->
              <th data-field="id" data-formatter="operateFormatter">Acciones</th>
            </tr>
          </thead>
        </table>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function operateFormatter(value, row, index) {
  show = "{{ path('user_ver', {id: -1})}}";
  show = show.replace('-1', value);
  return [
    `<a href="${show}">Ver</a>`,
  ].join('');
  }
  var $table = $('#tablaUser');
</script>
{% endblock %}
