{% extends 'layout.html.twig' %}

{% block content %}
  <div class="container">
    <br>
    <h1>Estados</h1>
    <div class="">
      <a class="btn btn-dark" href="{{ path('estado_new') }}">Agregar nuevo estado</a>
    </div>
    <br>
    <div class="table-responsive">
      <table  id="tablaEstados"
              class="table table-hover table-striped"
              data-toggle="table"
              data-height="400"
              data-side-pagination="server"
              data-pagination="true"
              data-page-list="[2, 5, 10, 20, 50, 100, 200]"
              data-search="true"
              data-show-columns="true"
              data-url="{{ path('estado_list') }}"
              >
        <thead>
          <tr>
            <th scope="row" data-field="nombre" data-sortable="true">Nomre</th>
            <th scope="row" data-field="color" data-sortable="true">Color</th>
            <th scope="row" data-field="habilitado" data-sortable="true">Habilitado</th>
            <th data-field="id" data-formatter="operateFormatter">Acciones</th>
          </tr>
        </thead>
      </table>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
  function operateFormatter(value, row, index) {
    show = "{{ path('estado_show', {id: -1})}}";
    show = show.replace('-1', value);
    return [
      `<a class="edit ml10" href="${show}" title="Ver"><i class="fas fa-search-plus"></i></a>`,
    ].join('');
  }
  var $table = $('#tablaEstados');
</script>
{% endblock %}
