{% extends 'tablelist.html.twig' %}

{% block body %}
  {% block descriptionTable %}
  <br>
    <h1>Condiciones</h1>
  {% endblock %}
  {% block filters %}
  <span></span>
  <br>
  {% endblock %}

  {% block new %}
    <a class="btn btn-dark" href="{{ path('condicion_new') }}">Nueva Condici√≥n</a>
  {% endblock %}

  {% block headPrincipalTable %}
    <th scope="row">Nombre</th>
    <th scope="row">Habilitado</th>
    <th scope="row">Descripcion</th>
    <th scope="row">Actions</th>
  {% endblock %}
  {% block bodyPrincipalTable %}
    {% for condicion in condicions %}
      <tr>
          <td><a href="{{ path('condicion_show', { 'id': condicion.id }) }}">{{ condicion.nombre }}</a></td>
          <td>{% if condicion.habilitado %}Yes{% else %}No{% endif %}</td>
          <td>{{ condicion.descripcion }}</td>
          <td>
              <ul>
                  <li>
                      <a href="{{ path('condicion_show', { 'id': condicion.id }) }}">Ver</a>
                  </li>
                  <!-- <li>
                      <a href="{{ path('condicion_edit', { 'id': condicion.id }) }}">edit</a>
                  </li> -->
              </ul>
          </td>
      </tr>
      {% endfor %}
      {% endblock %}
  {% endblock %}
